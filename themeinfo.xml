        <thumbnail name="status">themepreviews/status.png</thumbnail>
        
        <thumbnail name="about">themepreviews/about.png</thumbnail>
        
        <!-- A description of the theme, including general colours and
             style. The description should include any details that
             may help to locate your theme in a search. -->
        <description>Aside from the wallpaper and icons, Anita has no images, letting your recordingsâ€™ artwork shine through!</description>
        
