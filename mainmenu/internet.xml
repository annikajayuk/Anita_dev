<?xml version="1.0" encoding="utf-8"?>
<mythmenu name="INTERNET">
    
    <button>
        <type>NEWS</type>
        <text>News Feeds</text>
        <description>Keep up with the news</description>
        <action>PLUGIN mythnews</action>
        <depends>mythnews</depends>
    </button>
    
    <button>
        <type>WEBPAGE</type>
        <text>Web</text>
        <description>Browse the web</description>
        <action>PLUGIN mythbrowser</action>
        <depends>mythbrowser</depends>
    </button>
    
    <button>
        <type>NET_VIDEO</type>
        <text>Internet Video</text>
        <action>MENU netvisionmenu.xml</action>
        <description>Search and browse internet video sites</description>
        <depends>mythnetvision</depends>
    </button>
    
    <button>
        <type>WEATHER</type>
        <text>Weather</text>
        <description>View the weather forecast</description>
        <action>PLUGIN mythweather</action>
        <depends>mythweather</depends>
    </button>
    
</mythmenu>